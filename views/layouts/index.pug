include /mixins/forms.pug

doctype html
html(lang="en")
  head
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no")
    title Task manager

  body
    .d-flex.flex-column.flex-md-row.align-items-center.p-3.px-md-4.mb-3.bg-white.border-bottom.shadow-sm
      h5.my-0.mr-md-auto.font-weight-normal Task manager
      nav.my-2.my-md-0.mr-md-3
        if isSignedIn()
            a.btn.btn-outline-primary(href=urlFor('root') data-method='delete' rel='nofollow') Sign Out
        else
            a.btn.btn-outline-primary.mr-1(href=urlFor('root')) Sign In
            a.btn.btn-outline-primary(href=urlFor('newUser')) Sign Up
    .container
      - const msg = flash.get()
      if msg
        .alert.alert-info.m-3= msg
      block content
      footer.pt-4.my-md-5.pt-md-5.border-top
        .row
          .col-12.col-md
            small.d-block.mb-3.text-muted 2019 &copy; Oleg Gudzii
          .col-6.col-md
            h5 About
            ul.list-unstyled.text-small
              li
                a.text-muted(href="https://github.com/gudzii-ov/project-lvl4-s445") Github page
    script(src='/assets/main.js')
